---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// This handles the /OpenAppsLabs/ prefix automatically
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="5G | Open Apps Labs">
  <div class="container">
    
    <Navbar />

    <header class="hero">
      <h1>5G - Set NR-Only</h1>
      <p>
        Modern network switching tool built to lock on <span class="love">NR-Only</span> or NR/LTE.
      </p>
      
      <div class="btn-group">
        <a href="https://www.github.com/OpenAppsLabs/5G" class="btn btn-solid">
          <img src={`${baseUrl}/icons/github.svg`} alt="GitHub" />
          GitHub
        </a>
        <a class="btn btn-outline disabled" aria-disabled="true">
          <img src={`${baseUrl}/icons/smartphone.svg`} alt="Playstore" />
          Playstore (Coming Soon)
        </a>
      </div>
    </header>

    <div class="section-label" id="features">(01) FEATURES</div>

    <div class="bento-grid">
      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
              <img src={`${baseUrl}/icons/activity.svg`} alt="Activity Icon" />
            </div>
          </div>
          <h3>Lock your phone on NR-ONLY</h3>
          <p>
            Set your phones network mode to NR-Only or NR/LTE with just a tap.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">LTE</span>
          <span class="pill">NR</span>
          <span class="pill">SIGNAL</span>
        </div>
      </article>

      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
              <img src={`${baseUrl}/icons/shield.svg`} alt="Shield Icon" />
            </div>
          </div>
          <h3>Privacy</h3>
          <p>
            100% privacy-focused. No ads, no trackers, and no unnecessary permissions.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">NO ADS</span>
          <span class="pill">NO TRACKING</span>
        </div>
      </article>

      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
              <img src={`${baseUrl}/icons/triangle-alert.svg`} alt="Alert Icon" />
            </div>
          </div>
          <h3>Compat</h3>
          <p>
            Hidden radio info may not work on carrier-locked devices, Samsung Knox, or MIUI.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">DISCLAIMER</span>
        </div>
      </article>
    </div>

    <div class="section-label" id="specs">(02) SPECIFICATIONS</div>

    <div class="info-grid app-specs">
      <div class="glass-panel">
        <p class="bio-text">
          <strong>5G</strong> is designed to give you full control over your network hardware.
          Force <strong>NR Only</strong>, check VoLTE status, and access hidden Android radio settings
          without needing root access.
        </p>
        <p class="bio-sub">Built for Power Users</p>
      </div>

      <div class="glass-panel" style="padding: 30px">
        <div class="stack-list">
          <div class="stack-item">
            <span>Download</span>
            <span></span>
          </div>

          <div class="stack-item">
            <span>Play Store</span>
            <span><a href="https://play.google.com/store/apps/details?id=YOUR_APP_PACKAGE" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>IzzyOnDroid</span>
            <span><a href="https://apt.izzysoft.de/fdroid/repo" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>OpenAPK</span>
            <span><a href="YOUR_OPENAPK_REPOSITORY_LINK" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>Direct APK</span>
            <span><a href="YOUR_DIRECT_APK_URL.apk" target="_blank">Download</a></span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="privacy-link-wrapper">
        <a href={`${baseUrl}/5g/privacy`} class="privacy-link">View Privacy Policy</a>
    </div>

    <Footer />

  </div>
</Layout>

<style>
    /* Local Overrides */
    
    .app-specs { 
        display: grid; 
        grid-template-columns: 2fr 1fr; 
        gap: 24px; 
    }
    
    .privacy-link-wrapper {
        margin-bottom: 60px;
        text-align: center;
    }
    
    .privacy-link {
        font-family: var(--font-mono);
        color: var(--text-secondary);
        font-size: 0.85rem;
        text-decoration: underline;
        transition: color 0.2s;
    }
    .privacy-link:hover { color: var(--text-primary); }
    
    @media (max-width: 768px) {
        .app-specs { grid-template-columns: 1fr; }
        h1 { font-size: 2.8rem; }
    }
</style>
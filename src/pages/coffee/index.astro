---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Handles the /OpenAppsLabsAstro/ prefix automatically
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Coffee | Open Apps Labs">
  <div class="container">
    
    <Navbar />

    <header class="hero">
      <h1>Coffee - Keep Screen Awake</h1>
      <p>
        Prevent screen dimming. A modern <span class="love">Widget</span> and quick settings <span class="love">Tile</span>
        built with Jetpack Compose.
      </p>
      
      <div class="btn-group">
        <a href="https://www.github.com/OpenAppsLabs/Coffee" class="btn btn-solid">
          <img src={`${baseUrl}/icons/github.svg`} alt="GitHub" />
          GitHub
        </a>
        <a class="btn btn-outline disabled" aria-disabled="true">
          <img src={`${baseUrl}/icons/smartphone.svg`} alt="Playstore" />
          Playstore (Coming Soon)
        </a>
      </div>
    </header>

    <div class="section-label" id="features">(01) FEATURES</div>

    <div class="bento-grid">
      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
                <img src={`${baseUrl}/icons/sliders-horizontal.svg`} width="24" height="24" alt="" />
            </div>
          </div>
          <h3>Quick Tile</h3>
          <p>
            One-tap toggle from your status bar. Custom timers (1-60 min) or Indefinite mode.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">QS TILE</span>
          <span class="pill">TIMER</span>
          <span class="pill">INFINITE</span>
        </div>
      </article>

      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
                <img src={`${baseUrl}/icons/shield.svg`} width="24" height="24" alt="" />
            </div>
          </div>
          <h3>Privacy</h3>
          <p>
            100% offline and privacy-focused. No ads, no trackers, minimal permissions.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">NO ADS</span>
          <span class="pill">OFFLINE</span>
        </div>
      </article>

      <article class="widget">
        <div>
          <div class="widget-header">
            <div class="app-icon">
                <img src={`${baseUrl}/icons/shapes.svg`} width="24" height="24" alt="" />
            </div>
          </div>
          <h3>Widgets</h3>
          <p>
            Use it right from your home screen. Customizable sizes and shapes.
          </p>
        </div>
        <div class="feature-pills">
          <span class="pill">20+ SHAPES</span>
          <span class="pill">RESIZABLE</span>
        </div>
      </article>
    </div>

    <div class="section-label" id="specs">(02) SPECIFICATIONS</div>

    <div class="info-grid coffee-specs">
      <div class="glass-panel">
        <p class="bio-text">
          <strong>Coffee</strong> is a minimal utility designed for focus.
          Whether you are reading long articles, navigating, or developing, keep your screen on without
          touching it.
          <br><br>
          Supports <strong>Material You</strong> dynamic theming.
        </p>
        <p class="bio-sub">Built for Readers & Developers</p>
      </div>

      <div class="glass-panel" style="padding: 30px">
        <div class="stack-list">
          <div class="stack-item">
            <span>Download</span>
            <span></span>
          </div>

          <div class="stack-item">
            <span>Play Store</span>
            <span><a href="https://play.google.com/store/apps/details?id=YOUR_APP_PACKAGE" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>IzzyOnDroid</span>
            <span><a href="https://apt.izzysoft.de/fdroid/repo" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>OpenAPK</span>
            <span><a href="YOUR_OPENAPK_REPOSITORY_LINK" target="_blank">Visit</a></span>
          </div>

          <div class="stack-item">
            <span>Direct APK</span>
            <span><a href="YOUR_DIRECT_APK_URL.apk" target="_blank">Download</a></span>
          </div>
        </div>
      </div>
    </div>

    <Footer />

  </div>
</Layout>

<style>
    /* Local Layout Overrides */
    
    .coffee-specs { 
        display: grid; 
        grid-template-columns: 2fr 1fr; 
        gap: 24px; 
    }
    
    @media (max-width: 768px) {
        .coffee-specs { grid-template-columns: 1fr; }
        h1 { font-size: 2.8rem; }
    }
</style>
---
/* src/layouts/Layout.astro */
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
}

const { title, description = "Simple. Secure. Open. Android apps built with love." } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        
        <link rel="icon" type="image/svg+xml" href={`${baseUrl}/icons/code-xml.svg`} />
        
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet" />
        
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
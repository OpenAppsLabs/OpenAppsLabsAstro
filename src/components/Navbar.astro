---
/* src/components/Navbar.astro */
const baseUrl = import.meta.env.BASE_URL; // Best practice: Use the helper
---
<nav>
  <div class="logo">
    <img src={`${baseUrl}/icons/code.svg`} class="logo-icon" alt="" />
    
    <a href={`${baseUrl}/`}>OPEN APPS LABS</a>
    
    <img src={`${baseUrl}/icons/code-xml.svg`} class="logo-icon" alt="" />
  </div>
  
  <div class="nav-links">
    <a href={`${baseUrl}/`}>HOME</a>
    <a href={`${baseUrl}/#apps`}>APPS</a>
  </div>
</nav>

<style>
  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .logo-icon {
    width: 20px;
    height: 20px;
    opacity: 0.8;
  }
</style>